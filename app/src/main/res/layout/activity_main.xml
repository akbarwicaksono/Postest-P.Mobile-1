<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akbarwicaksono.praktikum1.MainActivity">

    <ImageView
        android:layout_width="800dp"
        android:layout_height="80dp"
        android:id="@+id/LOGO"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/NAMA"
        android:text="Nama"
        android:textSize="15dp"
        android:textColor="black"
        android:layout_below="@id/LOGO"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/nama"
        android:hint="Masukkan Nama"
        android:textSize="15dp"
        android:layout_below="@+id/NAMA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/NIM"
        android:text="NIM"
        android:textSize="15dp"
        android:textColor="black"
        android:layout_below="@+id/nama"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/nim"
        android:hint="Masukkan NIM"
        android:textSize="15dp"
        android:layout_below="@+id/NIM"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/PRODI"
        android:text="Program Studi"
        android:textSize="15dp"
        android:textColor="black"
        android:layout_below="@id/nim"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:layout_below="@id/PRODI"></Spinner>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/JENIS"
        android:text="Jenis Kelamin"
        android:textSize="15dp"
        android:textColor="black"
        android:layout_below="@id/spin" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laki-Laki"
        android:id="@+id/laki"
        android:layout_below="@+id/JENIS"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perempuan"
        android:id="@+id/perempuan"
        android:layout_below="@+id/JENIS"
        android:layout_toRightOf="@+id/JENIS"
        android:layout_toEndOf="@+id/JENIS" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/button1"
        android:layout_below="@+id/perempuan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button2"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/perempuan"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

</RelativeLayout>
